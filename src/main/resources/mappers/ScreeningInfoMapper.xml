<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.terabox.demo.mappers.ScreeningInfoMapper">
    <insert id="insertScreeningInfo" parameterType="com.terabox.demo.entities.ScreeningInfoEntity">
        INSERT INTO `terabox`.`screening_info` (`movie_index`, `cinema_index`, `screening_date`, `screening_time`, `price`)
        VALUES (#{movieIndex}, #{cinemaIndex}, #{screeningDate}, #{screeningTime}, #{price})
    </insert>

    <select id="selectScreeningInfoByCinemaAndDate" resultType="com.terabox.demo.entities.ScreeningInfoEntity">
        SELECT *
        FROM `terabox`.`screening_info`
        WHERE `screening_date` = #{screeningDate}
        AND `cinema_index` = #{cinemaIndex}
    </select>

    <select id="selectScreeningInfoVoByCinemaAndDate" resultType="com.terabox.demo.vos.ScreeningInfoVo">
        SELECT *
        FROM `terabox`.`screening_info`
        WHERE `screening_date` = #{screeningDate}
          AND `cinema_index` = #{cinemaIndex}
    </select>
</mapper>